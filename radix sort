		int n, max;
	   cout << "Enter the number of elements: ";
	   cin >> n;
	   cout << "Enter the maximum digit of elements: ";
	   cin >> max;
	   int arr[n]; //create an array with given number of elements
	   cout << "Enter elements:" << endl;
	   for(int i = 0; i<n; i++) {
	      cin >> arr[i];
	   }
	   cout << "Data before Sorting: ";
	   display1(arr, n);
	   radixSort(arr, n, max);
	   cout << "Data after Sorting: ";
	   display1(arr, n);
